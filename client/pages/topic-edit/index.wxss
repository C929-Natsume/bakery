/* pages/topic-edit/index.wxss */

.title {
  line-height: 60rpx;
  color: #8B7355;
  margin-left: 30rpx;
  font-weight: 600;
}

.input-textarea {
  width: 100% !important;
  height: 250rpx;
  background: #fff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  padding: 20rpx;
  color: #5A4C3E;
}

.inner-textarea {
  width: 700rpx !important;
}

.media {
  padding: 20rpx 30rpx;
  background: #fff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.icon-pic {
  width: 100rpx;
  height: 100rpx;
}

.video-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  height: 210rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #FFD8A6;
  background: #FFF9F0;
}

.tmp-video {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  border-radius: 12rpx;
}

.del-video {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.8);
  box-sizing: border-box;
}

.tag-items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
  margin-bottom: 30rpx;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background: #fff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
}

.tag {
  margin: 10rpx 5rpx 0 5rpx;
  background: linear-gradient(135deg, #FFEB3B, #FFD47F);
  color: #8B7355;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-weight: 600;
}

.tag.active {
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
  color: #fff;
}

.input-radio {
  display: flex;
  justify-content: center;
  height: 60rpx;
  padding-left: 30rpx;
  background: #fff;
}

.btn-send {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100% !important;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
  border-radius: 0 !important;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border: none;
}

.btn-send-hover::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  opacity: .15;
  transform: translate(-50%, -50%);
  content: '';
  background-color: #8B7355;
  border-color: #8B7355;
}

/* 添加一些额外的样式 */
.input-textarea::placeholder {
  color: #999999;
}

.video-btn .icon-add {
  color: #FFD47F;
  font-size: 48rpx;
}

.del-video .icon-del {
  color: #fff;
  font-size: 24rpx;
}