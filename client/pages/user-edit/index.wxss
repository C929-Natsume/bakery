/* pages/user-edit/index.wxss */

.title {
  line-height: 60rpx;
  margin-left: 30rpx;
  color: #8B7355;
  font-weight: 600;
}

.input-text {
  padding-left: 5rpx;
  background: #ffffff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  margin: 0 30rpx;
  padding: 20rpx 24rpx;
  color: #5A4C3E;
  font-size: 28rpx;
}

.input-text::placeholder {
  color: #8B7355;
}

.input-radio {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 88rpx;
  padding-left: 30rpx;
  background: #ffffff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  margin: 0 30rpx 20rpx;
}

.radio {
  font-size: 28rpx !important;
  margin-right: 38rpx;
  color: #5A4C3E;
}

.input-textarea {
  width: 100% !important;
  height: 250rpx;
  background: #ffffff;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  margin: 0 30rpx;
  padding: 20rpx 24rpx;
  color: #5A4C3E;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input-textarea::placeholder {
  color: #8B7355;
}

.inner-textarea {
  width: 700rpx !important;
}

.btn-save {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100% !important;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
  border-radius: 0 !important;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border: none;
}

.btn-save-hover::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  opacity: .15;
  transform: translate(-50%, -50%);
  content: '';
  background-color: #8B7355;
  border-color: #8B7355;
}

/* 添加页面背景和输入框聚焦效果 */
.user-edit-page {
  background: #fffce0;
  min-height: 100vh;
}

.input-text:focus,
.input-textarea:focus {
  border-color: #FF9A76;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 118, 0.2);
}

/* 单选按钮选中样式 */
.radio .wx-radio-input.wx-radio-input-checked {
  background: #FF9A76;
  border-color: #FF9A76;
}


