/**app.wxss**/

page {
  background-color: #fffce0;
  background-size: 100% 100%, cover;
  background-repeat: no-repeat;
  background-position: center;
  min-height: 100vh;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #5A4C3E;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

image {
  display: block;
  height: auto;
  width: auto;
}

button::after {
  border: none;
}

/* 添加全局按钮样式 */
button {
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-weight: 600;
}

button[type="primary"] {
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
}

button[plain] {
  background: transparent;
  border: 2rpx solid #FFD8A6;
  color: #5A4C3E;
}

/* 全局卡片样式 */
.card {
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #FFD8A6;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.1);
}

/* 全局文本颜色 */
.text-primary {
  color: #5A4C3E;
}

.text-secondary {
  color: #8B7355;
}

.text-muted {
  color: #999999;
}

.text-accent {
  color: #FF9A76;
}

/* 全局背景色 */
.bg-primary {
  background: #fffce0;
}

.bg-white {
  background: #ffffff;
}

.bg-warm {
  background: #FFF9F0;
}

/* 全局边框 */
.border-warm {
  border: 2rpx solid #FFD8A6;
}

/* 全局阴影 */
.shadow-warm {
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.1);
}