/* pages/topic-detail/index.wxss */

.topic-item {
  margin-bottom: 20rpx;
}

.edit-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 710rpx;
  height: 88rpx;
  padding: 0 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid #FFD8A6;
  background: #FFF9F0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.edit-input {
  width: 550rpx !important;
  height: 88rpx;
  background: #FFFFFF;
  border: 2rpx solid #FFD8A6;
  border-radius: 12rpx;
  padding: 0 20rpx;
  color: #5A4C3E;
}

.edit-input::placeholder {
  color: #999999;
}

.more {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #8B7355;
  padding: 15rpx 0;
}

/* 可以添加发送按钮样式 */
.btn-send {
  background: linear-gradient(135deg, #FFD47F, #FFB74D);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-weight: 600;
  margin-left: 10rpx;
}