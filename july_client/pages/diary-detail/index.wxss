/* pages/diary-detail/index.wxss */
.diary-detail-page {
  min-height: 100vh;
  background-color: #f7f7f7;
}

/* 操作按钮 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  gap: 30rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #666;
}

/* 头部 */
.header-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
}

.date-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.emotion-tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  border: 2rpx solid;
}

.emotion-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.emotion-name {
  font-size: 28rpx;
  font-weight: 500;
}

/* 内容 */
.content-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
  min-height: 400rpx;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 元信息 */
.meta-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.meta-item:last-child {
  border-bottom: none;
}

.meta-label {
  font-size: 28rpx;
  color: #999;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
}

/* 加载状态 */
.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
