/* pages/diary-edit/index.wxss */
.diary-edit-page {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}

/* 日期显示 */
.date-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 通用section样式 */
.emotion-section,
.content-section,
.privacy-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4444;
  margin-left: 5rpx;
}

/* 内容输入 */
.content-input {
  width: 100%;
  min-height: 400rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 隐私设置 */
.privacy-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.privacy-label {
  display: flex;
  align-items: center;
}

.privacy-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.privacy-text {
  font-size: 30rpx;
  color: #333;
}

.privacy-tip {
  padding: 20rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.privacy-tip text {
  font-size: 26rpx;
  color: #666;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #337559 0%, #4a9d7a 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  opacity: 0.8;
}
