/* pages/mind-recipes/index.wxss */
.container {
  background: #fffce0;
  padding: 30rpx;
  min-height: 100vh;
}

.topbar {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-bottom: 25rpx;
}

.search {
  flex: 1;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 14rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(139, 115, 85, 0.1);
  color: #5A4C3E;
  font-size: 24rpx;
  border: none;
  height: 50rpx;
}

.search::placeholder {
  color: #999999;
}

.btn-stars {
  background: #FFEB3B;
  color: #111110;
  border: none;
  border-radius: 12rpx;
  padding: 14rpx 20rpx;
  white-space: nowrap;
  font-size: 22rpx;
  height: 50rpx;
  font-weight: 400;
}

.chips {
  white-space: nowrap;
  margin-bottom: 25rpx;
}

.chip {
  display: inline-block;
  border: 1rpx solid #f0f0ee;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
  background: #ffffff;
  color: #1b1a19;
  font-size: 22rpx;
  min-height: 40rpx;
  font-weight: 600;
}

.chip.active {
  background: #FFEB3B;
  color: #141413;
  border-color: transparent;
  font-weight: 600;
}

.card {
  background: #ffffff;
  border-radius: 25rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 115, 85, 0.15);
  color: #5A4C3E;
  min-height: 180rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #5A4C3E;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.meta {
  font-size: 26rpx;
  color: #999999;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.tag {
  background: #FFEB3B;
  color: #8B7355;
  border-radius: 15rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border: 1rpx solid #FFEB3B;
}

.source {
  margin-left: auto;
  color: #999999;
}

.read {
  color: #999999;
}

.loading {
  margin: 60rpx 0;
  color: #999999;
  text-align: center;
  font-size: 28rpx;
}

.more-wrap {
  display: flex;
  justify-content: center;
  margin: 60rpx 0;
}

.btn-more {
  background: #FFEB3B;
  color: #8B7355;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  min-height: 80rpx;
  font-weight: 600;
}

.nothing {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999999;
  font-size: 32rpx;
}