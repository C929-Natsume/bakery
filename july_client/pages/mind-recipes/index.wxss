.container{padding:12px}
.topbar{display:flex;gap:8px;align-items:center;margin-bottom:8px}
.search{flex:1;background:#fff;border-radius:16px;padding:6px 12px;box-shadow:0 1px 2px rgba(0,0,0,.04)}
.btn-stars{white-space:nowrap}
.chips{white-space:nowrap;margin-bottom:8px}
.chips .chip{display:inline-block;border:1px solid #e6e6e6;padding:4px 10px;border-radius:14px;margin-right:8px;background:#fafafa;color:#666}
.chips .chip.active{background:#3d7e6a;color:#fff;border-color:#3d7e6a}
.card{background:#fff;border-radius:8px;padding:12px;margin-bottom:12px;box-shadow:0 1px 3px rgba(0,0,0,.06)}
.title{font-size:16px;font-weight:600;color:#333;margin-bottom:6px}
.meta{font-size:12px;color:#888;display:flex;flex-wrap:wrap;gap:8px}
.tag{background:#f3f6f8;color:#3d7e6a;border-radius:4px;padding:2px 6px}
.source{margin-left:auto}
.read{margin-left:8px}
.loading{margin:12px 0}
/* 加载更多按钮区域 */
.more-wrap{display:flex;justify-content:center;margin:12px 0 20px}
.btn-more{background:#3d7e6a;color:#fff;border:none;padding:8px 16px;border-radius:20px}
