.container{padding:12px; background: #fffce0;}
.card{background:#fff;border-radius:12px;padding:16px;margin-bottom:16px;box-shadow:0 2px 6px rgba(139, 115, 85, 0.1); border: 1px solid #FFD8A6}
.title{font-size:16px;font-weight:600;color:#5A4C3E;margin-bottom:8px}
.meta{font-size:12px;color:#8B7355;display:flex;flex-wrap:wrap;gap:8px}
.tag{background:#FFD8A6;color:#8B5A2B;border-radius:8px;padding:4px 10px;font-weight:600}
.source{margin-left:auto;color:#8B7355}
.read{margin-left:8px;color:#8B7355}
.loading{margin:12px 0;color:#8B7355}